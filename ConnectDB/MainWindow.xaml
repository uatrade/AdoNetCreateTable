<Window x:Class="ConnectDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Name="infodb"  Width="100" Height="100" VerticalAlignment="Top" Margin="20" BorderBrush="Black"></TextBox>
        <Button Name="connect" Width="150" Height="30" VerticalAlignment="Top" Margin="20, 200, 0, 20" Click="connect_Click">Соединится с базой</Button>
    </Grid>
</Window>
